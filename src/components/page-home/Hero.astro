---
import { Image } from "astro:assets";
import stars from "@/assets/icons/stars.svg";

interface Props {
  title: string;
  text: string;

  video: {
    poster: any;
    alt: string;
  };

  cta: {
    label: string;
    href: string;
  };

  metaList?: string[];

  avatarMain: {
    src: any;
    alt: string;
  };

  avatarsClients: {
    src: any;
    alt: string;
  }[];

  quote: string;
  quoteAuthor: string;

  quoteButton: {
    label: string;
    href: string;
    icon: any;
  };
}

const {
  title,
  text,
  video,
  cta,
  metaList,
  avatarMain,
  avatarsClients,
  quote,
  quoteAuthor,
  quoteButton,
} = Astro.props;
---

<section class="hero__section">
  <div class="container hero__inner">
    <h1 class="hero__title">{title}</h1>
    <p class="hero__text">{text}</p>
    <!-- VIDEO -->
    <div class="hero__video">
      <Image src={video.poster} alt={video.alt} class="hero-video-poster" />
    </div>
    <a class="hero__cta" href={cta.href}>
      {cta.label}
    </a>
    {
      metaList && (
        <ul class="hero__metaList">
          {metaList.map((item, index) => (
            <li class="hero__metaList-item">{item}</li>
          ))}
        </ul>
      )
    }
